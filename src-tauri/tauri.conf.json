{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Datablaze",
  "version": "0.3.0",
  "identifier": "com.datablaze.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Datablaze - Database Manager",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "focus": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "deb",
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Datablaze",
    "shortDescription": "A modern, lightning-fast database manager",
    "longDescription": "Datablaze is a powerful database management tool built with Tauri and React. It supports PostgreSQL and MySQL with a beautiful interface, multi-tab queries, and blazing fast performance.",
    "category": "DeveloperTool",
    "windows": {
      "wix": {
        "upgradeCode": "A1B2C3D4-E5F6-7890-ABCD-EF1234567890"
      }
    }
  }
}